<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CreateProfileActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <TextView
        android:id="@+id/Prof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Create Your Profile Here"
        android:textSize="40sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bio-data"
        android:textSize="35sp"
        android:layout_below="@+id/Prof"
        android:id="@+id/Bio"/>

    <EditText
        android:id="@+id/firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Bio"
        android:hint="First Name"
        android:inputType="text"
        android:textColor="@color/colorPrimaryLight"/>

    <EditText
        android:id="@+id/lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstname"
        android:hint="Last Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/IDnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="ID Number"
        android:inputType="number"/>

    <EditText
        android:id="@+id/contactemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IDnumber"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contactemail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Phone Number"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/DOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phonenumber"
        android:layout_alignParentLeft="true"
        android:hint="Date of Birth"
        android:inputType="date"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Work Experience"
        android:textSize="35sp"
        android:id="@+id/experienceTextView"
        android:layout_below="@+id/DOB"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter name of Employer"
        android:textSize="35sp"
        android:id="@+id/employerName"
        android:layout_below="@+id/experienceTextView"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start date"
        android:inputType="date"
        android:textSize="35sp"
        android:id="@+id/startdate"
        android:layout_below="@+id/employerName"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Date"
        android:inputType="date"
        android:textSize="35sp"
        android:id="@+id/endDate"
        android:layout_below="@+id/startdate"/>



    <EditText
        android:id="@+id/Qualification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/DOB"
        android:layout_alignParentLeft="true"
        android:hint="Professional Qualifications"
        android:inputType="text"/>

    <Button
        android:id="@+id/CreateProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit and Save Profile"
        android:layout_below="@id/Qualification"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/ViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View and Edit Profile"
        android:layout_below="@id/CreateProfile"
        android:layout_centerInParent="true"/>



</RelativeLayout>